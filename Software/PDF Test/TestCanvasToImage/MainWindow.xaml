<Window x:Class="TestCanvasToImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Button Content="Click here to create image" Click="Button_Click"/>
        <Canvas Name="MyCanvas" Width="525" Height="350">
            <Ellipse Canvas.Left="60" Canvas.Top="130" Width="30" Height="30" Fill="Blue"/>
            <Label Canvas.Left="10" Canvas.Top="10">Hello.</Label>
            <Rectangle Canvas.Left="150" Canvas.Top="55" Width="300" Height="110" Fill="Black"/>
        </Canvas>
    </StackPanel>
</Window>
